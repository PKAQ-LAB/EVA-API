<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.nerv.web.sys.dict.mapper.DictViewMapper">
  <resultMap id="dictMap" type="java.util.Map">
    <result property="key" column="key_name"/>
    <result property="value" column="key_value"/>
  </resultMap>
  <!-- 带子表数据查询 -->
  <resultMap id="baseResultMap" type="java.util.Map">
    <result property="key" column="code"/>
    <collection property="value" resultMap="dictMap" javaType="list" />
  </resultMap>

  <select id="queryForMap" resultMap="baseResultMap">
    select * from v_dict
  </select>
</mapper>